<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pfstu.pixellauncher.Modules.Launch.MainController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="选择版本:" style="-fx-font-size: 14px;"/>
    <ComboBox fx:id="versionComboBox" promptText="请选择版本"/>

    <Label text="用户名:" style="-fx-font-size: 14px;"/>
    <TextField fx:id="usernameField" promptText="输入用户名"/>

    <Button text="启动游戏" onAction="#launchGame" style="-fx-font-size: 14px; -fx-pref-width: 120px;"/>

    <Label text="启动日志:" style="-fx-font-size: 14px;"/>
    <TextArea fx:id="logArea" editable="false" wrapText="true" prefHeight="300" style="-fx-font-family: 'Consolas';"/>
</VBox>