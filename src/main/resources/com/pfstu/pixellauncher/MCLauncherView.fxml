<!-- main.fxml -->
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pfstu.pixellauncher.MainController">
    <ComboBox fx:id="versionComboBox" promptText="选择游戏版本"/>
    <Button text="下载游戏" onAction="#downloadVersion"/>
    <TextArea fx:id ="downloadLogArea" editable="false" wrapText="true" prefHeight="100"/>
    <Button text="启动游戏" onAction="#launchGame"/>
    <TextArea fx:id="logArea" editable="false" wrapText="true"/>
</VBox>